{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "i18n:extract": {
      "dependsOn": ["^i18n:extract"],
      "cache": false
    },
    "i18n:compile": {
      "dependsOn": ["^i18n:compile"],
      "outputs": ["lang/compiled/**"]
    },
    "build-libraries": {
      "dependsOn": ["boluo-icons#build", "boluo-logo#build", "boluo-utils#build", "boluo-api#build"]
    },
    "build": {
      "dependsOn": ["i18n:compile", "^build"]
    },
    "test": {
      "dependsOn": ["^test"],
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "pre-commit": {
      "dependsOn": ["i18n:extract", "^pre-commit"]
    },
    "dev": {
      "dependsOn": ["i18n:compile", "build-libraries"],
      "cache": false
    }
  }
}
